# Telegram Bot
ENABLE_TELEGRAM_BOT_POLLING=1
TELEGRAM_BOT_TOKEN=

# Telegram Bot Access Control
# 空列表表示允许所有用户（仅开发环境使用）
# 逗号分隔的 Telegram 用户 ID 列表，例如: 123456789,987654321
ALLOWED_TELEGRAM_USER_IDS=

# Admin User ID
ADMIN_TELEGRAM_USER_ID=

# QQ / NapCat (OneBot v11 Reverse WS)
ENABLE_QQ_NAPCAT=0
QQ_NAPCAT_WS_PATH=/channels/qq-onebot/ws
QQ_NAPCAT_WS_TOKEN=
ALLOWED_QQ_USER_IDS=
QQ_NAPCAT_ENABLE_GROUP=0
QQ_NAPCAT_SEND_TIMEOUT_SECONDS=10


# LLM API (Primary)
OPENAI_PRIMARY_API_KEY=
OPENAI_PRIMARY_BASE_URL=https://api3.wlai.vip/v1

# LLM API (Fallback)
#OPENAI_FALLBACK_API_KEY=
#OPENAI_FALLBACK_BASE_URL=https://yunwu.ai/v1

# LLM Model
LLM_MAIN_MODEL=gpt-5.2
LLM_FAST_MODEL=gpt-5-nano


# Admin API/Web
ADMIN_HTTP_HOST=127.0.0.1
ADMIN_HTTP_PORT=18080

# 管理端唯一鉴权 Token（API 与 Web 统一使用）
ADMIN_AUTH_TOKEN=

# WebHook 专用共享密钥（设置后，/api/v1/webhooks/* 仅接受该密钥）
WEBHOOK_SHARED_SECRET=
