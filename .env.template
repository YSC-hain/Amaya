QQ_NAPCAT_WS_PATH=/channels/qq-onebot/ws
QQ_NAPCAT_WS_TOKEN=
PRIMARY_QQ_USER_ID=
QQ_NAPCAT_ENABLE_GROUP=false
QQ_NAPCAT_SEND_TIMEOUT_SECONDS=10


# LLM API (Primary)
