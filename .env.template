# 用户个人信息
USER_NAME=
USER_TIMEZONE=Asia/Shanghai
USER_EMAIL=

# 主联系方式: telegram 或 qq
PRIMARY_CONTACT_METHOD=telegram

# Telegram Bot 配置
ENABLE_TELEGRAM_BOT_POLLING=true
TELEGRAM_BOT_TOKEN=
PRIMARY_TELEGRAM_USER_ID=

# NapCatQQ (OneBot v11 Reverse WS)
